from __future__ import print_function

import datetime
import os
import plistlib
import subprocess
import sys

SERVERTOOL = '/Applications/Server.app/Contents/ServerRoot/usr/sbin/server'

def serverRootLocation():
    """
    Return the ServerRoot value from the servermgr_calendar.plist.  If not
    present, return the default.

    @rtype: C{unicode}
    """
    plist = "/Library/Preferences/com.apple.servermgr_calendar.plist"
    serverRoot = u"/Library/Server/Calendar and Contacts"
    if os.path.exists(plist):
        serverRoot = plistlib.readPlist(plist).get("ServerRoot", serverRoot)
    if isinstance(serverRoot, str):
        serverRoot = serverRoot.decode("utf-8")
    return serverRoot


def logLocation():
    return os.path.join(serverRootLocation(), u"Logs")


def log(msg):
    logPath = os.path.join(logLocation(), "alerts.log")
    try:
        timestamp = datetime.datetime.now().strftime("%b %d %H:%M:%S")
        msg = "alerts: %s %s" % (timestamp, msg)
        with open(logPath, 'a') as output:
            output.write("{}\n".format(msg))  # so it appears in our log
    except IOError:
        # Could not write to log
        pass
    try:
        print(msg)
    except:
        print("Log error")


def postAlert(alertType, args):
    """
    Post an alert via the "server" command line tool
    """

    cmdline = [SERVERTOOL, "postAlert", alertType, "CalendarContactsAlerts"]
    cmdline.extend(args)

    try:
        log("Executing: {}".format(" ".join(cmdline)))
        child = subprocess.Popen(
            cmdline,
            stdin=subprocess.PIPE,
            stdout=subprocess.PIPE,
            stderr=subprocess.PIPE
        )
        output, error = child.communicate()
        log("Output: {}".format(output))
        if child.returncode:
            log("Non-zero exit code: %d, %s" % (child.returncode, error))
    except Exception, e:
        log(e)


def main():

    if os.getuid() != 0:
        log("This program must be run as root")
        sys.exit(1)

    if len(sys.argv) < 2:
        log("Alert type argument is required")
        sys.exit(1)

    postAlert(sys.argv[1], sys.argv[2:])

if __name__ == "__main__":
    main()
