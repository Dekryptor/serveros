<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>description</key>
	<string>Calendar and Contacts Server</string>
	<key>dependencies</key>
	<array>
		<string>PostgreSQL</string>
		<string>servermgr_web_ConfigDone</string>
	</array>
	<key>setup</key>
	<dict>
		<key>accounts</key>
		<dict>
			<key>com.apple.calendarserver</key>
			<dict>
				<key>name</key>
				<string>com.apple.calendarserver</string>
				<key>description</key>
				<string>Calendar and Contacts Server role account</string>
				<key>fullName</key>
				<string>Calendar Server</string>
				<key>uid</key>
				<integer>250</integer>
			</dict>
		</dict>
	</dict>
	<key>promotion</key>
	<dict>
		<key>scripts</key>
		<array>
			<string>${serverRoot}/Library/CalendarServer/Setup/CalendarServerPromotion</string>
		</array>
	</dict>
    <key>migration</key>
    <dict>
        <key>scripts</key>
        <array>
            <dict>
                <key>arguments</key>
                <array>
                    <string>--sourceRoot</string>
                    <string>/Library/Server/Previous</string>
                    <string>--targetRoot</string>
                    <string>/</string>
                    <string>--purge</string>
                    <string>0</string>
                    <string>--language</string>
                    <string>en</string>
                    <string>--sourceType</string>
                    <string>System</string>
                    <string>--sourceVersion</string>
                    <string>${previousSystemVersion}</string>
                </array>
                <key>path</key>
                <string>${serverRoot}/Library/CalendarServer/Setup/CalendarServerMigration</string>
            </dict>
        </array>
    </dict>
    <key>postSetup</key>
	<dict>
		<key>scripts</key>
		<array>
			<string>${serverRoot}/Library/CalendarServer/Setup/CalendarServerCommonSetup</string>
		</array>
	</dict>
</dict>
</plist>
