<html>
	<head>
		<style type="text/css">
			@media only screen and (device-width:320px){
				/* adjust the container div to work within the 320px width of MobileMail */
				.container{
					width:296px !important;
				}

				th{
					padding:11px 7px !important;
					text-align:center !important;
				}

				h1, h1 font{
					font-size:18px !important;
				}

				h2, h2 font{
					font-size:14px !important;
					font-weight:bold !important;
				}

				p, p font{
					font-size:11px !important;
					line-height:1.3 !important; /* [sic] unitless multiplier */
				}

				/* rework the table layout so the icon can be centered over the body text */
				.mobile_hidden{
					display:none !important;
				}

				/* adjust the spacing to work within the 320px width of MobileMail */
				img[height="50"], img[height="18"], img[height="16"]{
					height:15px;
				}

				img[width="50"]{
					width:10px;
				}

				img[width="35"]{
					width:10px;
				}

				img[width="300"]{
					width:236px !important;
					display:block;
				}

				td[width="5%"] img, td[width="15%"] img{
					width:30px !important;
				}

				td.body_text {
					padding-top:0px !important;
				}

				.body_text p:last-child{
					margin-bottom:0 !important;
				}

				/* adjust the "view wiki" button to be clickable at native iPhone size */
				a.button {
					border-radius:5px !important;
					padding:8px 19px !important;
					font-size:13px !important;
				}

				.hr_top {
					border-top-color:#f6f6f6 !important;
				}

			}
		</style>
	</head>
	<body style="text-size-adjust:auto; -webkit-text-size-adjust:auto;">
			<div class="container" style="text-size-adjust:auto; -webkit-text-size-adjust:auto; font-family: LucidaGrande, Lucida, helvetica, arial, sans-serif; width:640px;">
				<font face="LucidaGrande, Lucida, helvetica, arial, sans-serif;">
					<table cellspacing="0" cellpadding="0" border="0" width="100%" style="border-spacing:0;">
						<!-- spacing at the top -->
						<tr>
							<td style="height:15px;"></td>
						</tr>

						<tr>
							<td>
								<table  cellspacing="0" cellpadding="0" border="0" width="100%" style="border-spacing:0; border-collapse:collapse;">

									<tr>
										<!-- text with button -->
										<td  class="body_text" width="458" style="vertical-align:top;padding-left:15px;padding-right:15px;">
											<% if @loc_strings[:sub_title] %><h2 style="font-size:18px; margin:0; margin-bottom:1em; padding:0; font-weight:normal;"><font color="#5D5D5D"><%= raw @loc_strings[:sub_title] %></font></h2><% end %>
											<% @loc_strings[:body].each { |pp|
											  if pp[:raw] %>
											    <%= raw pp[:raw] %>
											  <% elsif pp[:button] %>
											  <div style="padding-top:5px;">
										      <a href="<%= pp[:url] %>" class="button" style="display:inline-block; text-decoration: none; color: #ffffff; background-color: #458cfc; padding:7px 15px 7px; font-size:11pt; font-weight: normal; border-radius: 5px; ">
										        <%= pp[:button] %>
										      </a>
										     </div>
										    <% else %>
										      <p style="font-size:13px; margin:0; margin-bottom:1em; padding:0; color:#363636;-webkit-font-smoothing: antialiased;"><%= pp[:pp] %></p>
									      <% end
								      } %>
										</td>

										<!-- graphic -->
										<td  class="mobile_hidden" align="center" valign="top">
											<img src="<%= @attachments[@icon_filename].url %>" border="0" />
										</td>
									</tr>

								</table>
							</td>
						</tr>

						<!-- divider line above the footnote -->
						<tr>
							<td style="height:30px;"></td>
						</tr>
						<tr>
							<td style="height:1px;background-color:#bfbfbf;"></td>
						</tr>
						<tr>
							<td style="height:10px;"></td>
						</tr>

						<!-- footnote -->
						<tr>
							<td style="color:#959595; font-family:LucidaGrande, Lucida, helvetica, arial, sans-serif; font-weight:normal;">
								<div style="font-size:11px !important; -webkit-text-size-adjust:none;">
									<%= @loc_strings[:footnote] %>
								</div>
							</td>
						</tr>

						<!-- more spacers -->
						<tr>
							<td  class="hr_top" style="font-size:1px; line-height:1px;">
								<img src="<%= @attachments['spacer.png'].url %>" alt="" border="0" width="1" height="18" style="width: 1px !important; height: 18px !important;" />
							</td>
						</tr>

						<tr>
							<td  style="font-size:1px; line-height:1px;">
								<img src="<%= @attachments['spacer.png'].url %>" alt="" border="0" width="1" height="16" style="width: 1px !important; height: 16px !important;" />
							</td>
						</tr>
					</table>

				</font>
			</div>
	</body>
</html>
