% workflow_name = ($properties["Workflow Name"] || "")
% title = ($properties["Title"] || "")
% submitting_user = ($properties["User Full Name"] || "")
% subject_value = ERBContext.locf("%1$s has successfully processed %2$s submitted by %3$s", workflow_name, ERBContext.quotify(title), submitting_user)
% image_filepaths = [File.join(pmu, "Contents/Resources/Images/PodcastCapture.png"), File.join(pmu, "Contents/Resources/Images/Spacer.png")] 
<%= ERBContext.encoded_header_with_addresses("From", from_address) %>
<%= ERBContext.encoded_header_with_value("Subject", subject_value) %>
<%= ERBContext.encoded_header_with_addresses("To", to_addresses) %>
Content-type: multipart/alternative;
    boundary=Apple-Podcast-Producer-MIME-Boundary-1


--Apple-Podcast-Producer-MIME-Boundary-1
Content-Type: text/plain;
	charset=UTF-8
Content-Transfer-Encoding: quoted-printable
% plain_file_path = File.join(pmu, "Contents/Resources/Templates/part.plain.erb")
<%= ERBContext.template_result(plain_file_path, current_binding).to_quoted_printable %>

--Apple-Podcast-Producer-MIME-Boundary-1
Content-Type: multipart/related;
	boundary=Apple-Podcast-Producer-MIME-Boundary-2;
	type="text/html"

--Apple-Podcast-Producer-MIME-Boundary-2
Content-Type: text/html;
	charset=UTF-8
Content-Transfer-Encoding: quoted-printable

% html_file_path = File.join(pmu, "Contents/Resources/Templates/part.html.erb")
<%= ERBContext.template_result(html_file_path, current_binding).to_quoted_printable %>

% image_filepaths.each do |file_path|
--Apple-Podcast-Producer-MIME-Boundary-2
Content-Disposition: inline;
	filename=<%= File.basename(file_path) %>
Content-Type: image/png;
	x-apple-mail-type=stationery;
	name=<%= File.basename(file_path) %>
Content-Transfer-Encoding: base64
Content-Id: <<%= File.basename(file_path, ".*") %>>

<%= [IO.read(file_path)].pack("m") %>
% end
--Apple-Podcast-Producer-MIME-Boundary-2--

--Apple-Podcast-Producer-MIME-Boundary-1--
